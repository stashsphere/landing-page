---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  id="getstarted"
  class="w-full min-h-screen flex flex-col justify-center items-center bg-primary"
>
  <div class="self-center xl:w-1/3 px-4 sm:px-2">
    <h2 class="font-bold tracking-widest text-gray-200 text-4xl mb-4">
      {title}
    </h2>
    <div class="font-light text-gray-200 flex flex-col gap-5">
      <div>
        <h2 class="text-xl font-bold">Checkout the demo</h2>
        <br />
        Go to <a
          class="text-accent font-bold"
          target="_blank"
          rel="noopener"
          href="https://demo.stashsphere.com">demo.stashsphere.com</a
        >.
        Create an account and add the user <span class="text-accent font-bold">robot</span> as a friend and
        wait until your friend request is accepted.
        The demo instance resets every few days.
      </div>
      <div>
        <h2 class="text-xl font-bold">Read the documentation</h2>
        Learn how use StashSphere and run your own instance.<br />
        Go to <a
          class="text-accent font-bold"
          target="_blank"
          rel="noopener"
          href="https://docs.stashsphere.com">docs.stashsphere.com</a
        >
      </div>
      <div>
        <h2 class="text-xl font-bold">Contribute</h2>
        Write code, documentation and report bugs on <a
          class="text-accent font-bold"
          target="_blank"
          rel="noopener"
          href="https://github.com/stashsphere">github.com/stashsphere</a
        >
      </div>
      <div>
        <h2 class="text-xl font-bold">Community</h2>
        Join the matrix channel:
        <a
          class="text-accent font-bold"
          target="_blank"
          rel="noopener"
          href="https://matrix.to/#/#stashsphere:matrix.org">#stashsphere:matrix.org</a
        >
      </div>
    </div>
  </div>
</div>
